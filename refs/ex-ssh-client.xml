<ssh-client
  xmlns="urn:ietf:params:xml:ns:yang:ietf-ssh-server">

  <initiating>
    <ssh-server>
      <name>corp-fw1</name>
      <ssh>
        <address>11.22.33.44</address>
        <port>830</port>

        <server-auth>
          <host-keys>
            <host-key>
              <public-key>my-rsa-key</public-key>
            </host-key>
          </host-keys>
          <trusted-ca-certs>
            deployment-specific-ca-certs
          </trusted-ca-certs>
          <trusted-server-certs>
            explicitly-trusted-server-certs
          </trusted-server-certs>
        </server-auth>

        <auth-credentials>
          <login>username</login>
          <auth-methods>
            <client-certs>my-client-cert</client-certs>
            <public-key>ssh-rsa</public-key>
            <password>password</password>
          </auth-methods>
        </auth-credentials>

      </ssh>
    </ssh-server>
  </initiating>

  <listening>

    <endpoint>
      <name>Intranet-facing listener</name>
      ...
    </endpoint>
    <endpoint>
      <name>Internet-facing listener</name>
      <ssh>
        <address>11.22.33.44</address>
        <port>FIXME:netconf-ch-ssh</port>

        <server-auth>
          <trusted-ssh-host-keys>
            explicitly-trusted-ssh-server-host-keys
          </trusted-ssh-host-keys>
          <trusted-ca-certs>
            deployment-specific-ca-certs
          </trusted-ca-certs>
          <trusted-server-certs>
            explicitly-trusted-server-certs
          </trusted-server-certs>
        </server-auth>

        <auth-credentials>
          <hashmap>
            <key>unique-id</key>   regex?   list-of-ssns?
            <value>
              <login>username</login>
              <auth-methods>
                <client-certs>my-client-cert</client-certs>
                <public-key>ssh-rsa</public-key>
                <password>password</password>
              </auth-methods>
            </value>
          </hashmap>
        </auth-credentials>

      </ssh>
    </endpoint>

  </listening>

</ssh-client>


